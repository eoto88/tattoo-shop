  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.1.0",
    "express": "^4.17.1",
    "http-server": "^13.0.1",
    "json-server": "^0.16.3",
    "lowdb": "^2.1.0",
    "tsparticles": "^1.34.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.12"
  }
}
